#Focus window
	bindsym $mod+Left exec ~/.scripts/windows.py focus left
	bindsym $mod+Down exec ~/.scripts/windows.py focus down
	bindsym $mod+Up exec ~/.scripts/windows.py focus up
	bindsym $mod+Right exec ~/.scripts/windows.py focus right

#Move container
	bindsym $mod+Shift+Left exec ~/.scripts/windows.py move left
	bindsym $mod+Shift+Down exec ~/.scripts/windows.py move down
	bindsym $mod+Shift+Up exec ~/.scripts/windows.py move up
	bindsym $mod+Shift+Right exec ~/.scripts/windows.py move right

#Switch workspace
	bindsym control+Mod1+Left exec ~/.scripts/workspaces.py switch prev
	bindsym control+Mod1+Right exec ~/.scripts/workspaces.py switch next
	bindsym $mod+Shift+Tab exec ~/.scripts/workspaces.py switch prev
	bindsym $mod+Tab exec ~/.scripts/workspaces.py switch next

#Move container to workspace	
